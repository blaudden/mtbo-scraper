{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/blaudden/mtbo-scraper/main/schema.json",
  "title": "mtbo_events_list",
  "type": "object",
  "description": "MTBO event data based on IOF XML 3.0 terminology with snake_case naming and scraper-specific enhancements",
  "properties": {
    "schema_version": {
      "const": "1.0"
    },
    "create_time": {
      "type": "string",
      "format": "date-time"
    },
    "creator": {
      "type": "string"
    },
    "meta": {
      "type": "object",
      "properties": {
        "sources": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "country_code": {
                "type": "string",
                "pattern": "^[A-Z]{3}$"
              },
              "name": {
                "type": "string"
              },
              "url": {
                "type": "string",
                "format": "uri"
              }
            },
            "required": ["country_code", "name", "url"]
          }
        }
      },
      "required": ["sources"]
    },
    "events": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Event"
      }
    }
  },
  "required": ["schema_version", "create_time", "creator", "meta", "events"],
  "$defs": {
    "Event": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier, format {CountryCode}_{SourceId}"
        },
        "name": {
          "type": "string"
        },
        "start_time": {
          "type": "string",
          "format": "date",
          "description": "Date of the event or first race"
        },
        "end_time": {
          "type": "string",
          "format": "date",
          "description": "Date of the event or last race"
        },
        "status": {
          "type": "string",
          "enum": ["Planned", "Applied", "Proposed", "Sanctioned", "Canceled", "Rescheduled"],
          "description": "IOF EventStatus"
        },
        "original_status": {
          "type": ["string", "null"],
          "description": "Raw status from source system"
        },
        "classification": {
          "type": ["string", "null"],
          "enum": ["International", "National", "Regional", "Local", "Club", null],
          "description": "IOF EventClassification"
        },
        "form": {
          "type": ["string", "null"],
          "enum": ["Individual", "Team", "Relay", null],
          "description": "IOF EventForm"
        },
        "organisers": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Organiser"
          }
        },
        "officials": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Official"
          }
        },
        "classes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "documents": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Document"
          }
        },
        "urls": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Url"
          }
        },
        "information": {
          "type": ["string", "null"]
        },
        "region": {
          "type": ["string", "null"]
        },
        "punching_system": {
          "type": ["string", "null"]
        },
        "races": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/Race"
          }
        },
        "entry_deadlines": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/EntryDeadline"
          }
        }
      },
      "required": ["id", "name", "start_time", "end_time", "status", "races"]
    },
    "Race": {
      "type": "object",
      "properties": {
        "race_number": {
          "type": "integer",
          "minimum": 1
        },
        "name": {
          "type": "string"
        },
        "datetimez": {
          "type": "string",
          "format": "date-time"
        },
        "discipline": {
          "type": "string",
          "enum": ["Sprint", "Middle", "Long", "Ultralong", "Other"]
        },
        "night_or_day": {
          "type": ["string", "null"],
          "enum": ["day", "night", "combined", null]
        },
        "punching_system": {
          "type": ["string", "null"]
        },
        "position": {
          "anyOf": [
            { "$ref": "#/$defs/Position" },
            { "type": "null" }
          ]
        },
        "areas": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Area"
          }
        },
        "documents": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Document"
          }
        },
        "urls": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Url"
          }
        },
        "entry_counts": {
          "type": ["object", "null"],
          "properties": {
            "total_count": { "type": "integer" },
            "class_counts": {
              "type": "object",
              "additionalProperties": { "type": "integer" }
            }
          }
        },
        "start_counts": {
          "type": ["object", "null"],
          "properties": {
            "total_count": { "type": "integer" },
            "class_counts": {
              "type": "object",
              "additionalProperties": { "type": "integer" }
            }
          }
        },
        "result_counts": {
          "type": ["object", "null"],
          "properties": {
            "total_count": { "type": "integer" },
            "class_counts": {
              "type": "object",
              "additionalProperties": { "type": "integer" }
            }
          }
        }
      },
      "required": ["race_number", "datetimez", "discipline"]
    },
    "Organiser": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "country_code": {
          "type": ["string", "null"],
          "pattern": "^[A-Z]{3}$"
        }
      },
      "required": ["name"]
    },
    "Official": {
      "type": "object",
      "properties": {
        "role": {
          "type": "string",
          "description": "Role type, e.g., EventDirector, CourseSetter, etc."
        },
        "name": {
          "type": "string"
        }
      },
      "required": ["role", "name"]
    },
    "Document": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["Invitation", "Bulletin", "StartList", "TechnicalInformation", "EmbargoMap", "ResultList", "Other"]
        },
        "title": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "published_time": {
          "type": ["string", "null"],
          "format": "date-time"
        }
      },
      "required": ["type", "title", "url"]
    },
    "Url": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "IOF type (Website, StartList, ResultList) or custom (EntryList, Livelox)"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["type", "url"]
    },
    "EntryDeadline": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["normal", "late"]
        },
        "datetimez": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["type", "datetimez"]
    },
    "Position": {
      "type": "object",
      "properties": {
        "lat": {
          "type": "number"
        },
        "lng": {
          "type": "number"
        }
      },
      "required": ["lat", "lng"]
    },
    "Area": {
      "type": "object",
      "properties": {
        "lat": {
          "type": "number"
        },
        "lng": {
          "type": "number"
        },
        "polygon": {
            "type": ["array", "null"],
            "items": {
                "type": "array",
                "minItems": 2,
                "maxItems": 2,
                "items": {"type": "number"}
            }
        }
      },
      "required": ["lat", "lng"]
    }
  }
}
